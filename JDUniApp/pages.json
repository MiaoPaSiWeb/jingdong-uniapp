{
	// 如果您是通过uni_modules形式引入uView，可以忽略此配置
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}, {
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/trend/trend",
			"style": {
				"navigationBarTitleText": "趋势",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/self-support/self-support",
			"style": {
				"navigationBarTitleText": "自营",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/national-pavilion/national-pavilion",
			"style": {
				"navigationBarTitleText": "国家馆",
				"enablePullDownRefresh": false,
				"onReachBottomDistance": 100
			}
		}, {
			"path": "pages/detail/detail",
			"style": {
				"navigationBarTitleText": "详情",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/account-set/account-set",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "账户设置",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/goods_fav/goods_fav",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品收藏",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/shop_fav/shop_fav",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "店铺收藏",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/footprint/footprint",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "浏览足迹",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/product/product",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品主页",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#FFF",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	/* 增加原生tabbar 配合自定义tabbar使用 解决自定义tabbar闪烁问题 */
	"tabBar": {
		"custom": true, //隐藏官方选项卡
		"list": [{
			"pagePath": "pages/index/index"
		}, {
			"pagePath": "pages/category/category"
		}, {
			"pagePath": "pages/trend/trend"
		}, {
			"pagePath": "pages/self-support/self-support"
		}, {
			"pagePath": "pages/national-pavilion/national-pavilion"
		}]
	}
}