.scroll-view_H {
  box-sizing: border-box;
  padding: 12rpx 0;
}
.scroll-view_H .content {
  display: flex;
  border: 1px solid red;
}
.scroll-view_H .content .scroll-view-item_H {
  flex-shrink: 0;
  width: 340rpx;
  height: 462rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  border: 1px solid transparent;
}
.scroll-view_H .content .scroll-view-item_H:last-child {
  margin-right: 0rpx;
}
.scroll-view_H .content::before {
  content: "";
  border: 12rpx solid transparent;
}
.scroll-view_H .content::after {
  content: "";
  border: 12rpx solid transparent;
}

